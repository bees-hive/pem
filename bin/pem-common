#!/usr/bin/env bash
set -e
[ "$PEM_DEBUG" = "yes" ] && set -x

export PEM_VENV_LINK='venv'

pem_check_version(){
    if [ -z "$1" ]; then
        echo "Please specify Python's version (like 2.7.11)."
        exit -2
    fi
}

message-in-box(){
    t="$@xxxx"
    c=${replace:--}
    echo -e "${t//?/$c}\n$c $@ $c\n${t//?/$c}"
}
