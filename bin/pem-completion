#!/usr/bin/env bash

_pem() {
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"

    case "${prev}" in 
        python-remove | python-default) 
            COMPREPLY=( $(compgen -W "$(pyenv versions --bare --skip-aliases)" ${cur}) )
            return 0 ;; 
        install)
            local data=$(pyenv install --list | sed '/Available versions:/d')
            COMPREPLY=( $(compgen -W "${data}" ${cur}) )
            return 0 ;;
        folder-env)
            COMPREPLY=( $(compgen -W "--with-vevn-link" ${cur}) )
            return 0 ;;
        *) ;; 
    esac
    
    opts=($(pem commands))
    COMPREPLY=( $(compgen -W "${opts[*]}" -- ${cur}) )
}
complete -F _pem pem
